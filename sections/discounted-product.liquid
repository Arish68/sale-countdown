{{ 'discount-product.css' | asset_url | stylesheet_tag }}

{%- render 'discount-product', section,section -%}

{% schema %}
    {
      "name": "Discount Product",
      "tag": "section",
      "class": "section",
      "settings": [
        {
          "type": "header",
          "content": "Section Data"
        },
        {
          "type": "checkbox",
          "id": "enable_discount_product",
          "label": "Enable Discount Product Section",
          "default": true
        },
        {
          "type": "text",
          "id": "title",
          "default":"Get Discount",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "default":"simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s",
          "label": "Description"
        },
        {
          "type": "header",
          "content": "Discount Product"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Discount Product"
        },
        {
          "type": "text",
          "id": "product_title",
          "label": "Product Title"
        },
        {
          "type": "text",
          "id": "product_description",
          "label": "Product Description"
        },
        {
          "type": "text",
          "id": "product_vendor",
          "label": "Product Vendor"
        },
        {
          "type": "text",
          "id": "product_category",
          "label": "Product Category"
        },
       
        {
          "type": "header",
          "content": "Button Settings"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "Button Text"
        },

        {
          "type": "header",
          "content": "Discount Timer"
        },
        {
          "type": "text",
          "id": "timer_message",
          "label": "Timer Message"
        },
        {
          "type": "html",
          "id": "timer_percent_off",
          "label": "Timer Percent Off"
        },

        {
        "type": "header",
        "content": "Countdown Banner"
      },
      {
        "type": "checkbox",
        "id": "enable_countdown",
        "label": "Show Countdown",
        "default": false
      },
      {
        "type": "select",
        "id": "countdown_end_month",
        "label": "Countdown End Month",
        "options": [
          {
            "value": "january",
            "label": "January"
          },
          {
            "value": "february",
            "label": "February"
          },
          {
            "value": "march",
            "label": "March"
          },
          {
            "value": "april",
            "label": "April"
          },
          {
            "value": "may",
            "label": "May"
          },
          {
            "value": "june",
            "label": "June"
          },
          {
            "value": "july",
            "label": "July"
          },
          {
            "value": "august",
            "label": "August"
          },
          {
            "value": "september",
            "label": "September"
          },
          {
            "value": "october",
            "label": "October"
          },
          {
            "value": "november",
            "label": "November"
          },
          {
            "value": "december",
            "label": "December"
          }
        ],
        "default": "january"
      },
      {
        "type": "text",
        "id": "countdown_end_year",
        "default": "2024",
        "info": "e.g 2024",
        "label": "Countdown End at Year"
      },
      {
        "type": "text",
        "id": "countdown_end_date",
        "default": "20",
        "info": "e.g 20",
        "label": "Countdown End at date"
      },
      {
        "type": "text",
        "id": "countdown_end_time",
        "default": "02:24:59",
        "info": "e.g 02:24:59",
        "label": "Countdown End at Time"
      },
      {
        "type": "header",
        "content": "Countdown Text"
      },
      {
        "type": "textarea",
        "id": "countdown_default_text",
        "default": "Hurry up to get this Discount <span class='custom-time' ><\/span> ",
        "label": "Countdown Default Text"
      },
      {
        "type": "textarea",
        "id": "countdown_discount_end_text",
        "default": "New Price. Sale Has Ended!",
        "label": "Countdown End Text"
      },

        {
          "type": "header",
          "content": "Color Scheme"
        },
        {
          "type": "paragraph",
          "content": "Section Background"
        },
        {
          "type": "color",
          "id": "bg_color_1",
          "label": "Background Color 1",
          "info": "Please add Color 2 below if you need enable gradient",
          "default": "#F3AA54"
        },
        {
          "type": "color",
          "id": "bg_color_2",
          "label": "Background Color 2",
          "info": "Add Color to enable gradient",
          "default": "#F3AA54"
        },
        {
          "type": "paragraph",
          "content": "Section Text COlor"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "paragraph",
          "content": "Button Color"
        },
        {
          "type": "color",
          "id": "bg_button_color_1",
          "label": "Button Background Color 1",
          "info": "Please add Color 2 below if you need enable gradient",
          "default": "#2693FA"
        },
        {
          "type": "color",
          "id": "bg_button_color_2",
          "label": "Button Background Color 2",
          "info": "Add Color to enable gradient",
          "default": "#174E83"
        },
        {
          "type": "color",
          "id": "button_text_color",
          "label": "Button Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "percent_off_bg_color",
          "label": "Percent Off Background Color",
          "default": "#EF5726"
        },
        {
          "type": "paragraph",
          "content": "Percent Color"
        },
        {
          "type": "color",
          "id": "percent_off_text_color",
          "label": "Percent Off Text Color",
          "default": "#FFFFFF"
        },

        {
          "type": "paragraph",
          "content": "Timer Color"
        },
        {
          "type": "color",
          "id": "bg_timer_color_1",
          "label": "Timer Background Color 1",
          "info": "Please add Color 2 below if you need enable gradient",
          "default": "#FA7226"
        },
        {
          "type": "color",
          "id": "bg_timer_color_2",
          "label": "Timer Background Color 2",
          "info": "Add Color to enable gradient",
          "default": "#DA2127"
        },
        {
          "type": "color",
          "id": "timer_text_color",
          "label": "Timer Text Color",
          "default": "#FFFFFF"
        },
        {
          "type": "header",
          "content": "Timer Color"
        },
        {
          "type": "image_picker",
          "id": "circle_img",
          "label": "Circle Left Top Image"
        },
        {
          "type": "image_picker",
          "id": "dots_img",
          "label": "Dots Left Bottom Image"
        },
        {
          "type": "image_picker",
          "id": "bg_sping_img",
          "label": "Spring on Right Bottom Image"
        }
      ],
      "presets": [
        {
          "name": "Discount Product"
        }
      ]
    }
    {% endschema %}
    